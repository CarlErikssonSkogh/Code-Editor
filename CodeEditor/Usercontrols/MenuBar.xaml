<UserControl x:Class="CustomApplicationWindow.Usercontrols.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomApplicationWindow.Usercontrols"
             mc:Ignorable="d" 
             d:DesignWidth="500">
    <Grid>
        <Menu Background="Transparent"  Margin="5">
            <MenuItem Header="_File" Foreground="White">
                <MenuItem Header="_New" Command="New" Foreground="Black"/>
                <MenuItem Header="_Open" Foreground="Black"/>
                <MenuItem Header="_Save" Foreground="Black"/>
                <Separator />
                <MenuItem Header="_Exit" Foreground="Black"/>
            </MenuItem>
            <MenuItem Header="_Edit" Foreground="White">
                <MenuItem Command="Cut" Foreground="Black"/>
                <MenuItem Command="Copy" Foreground="Black"/>
                <MenuItem Command="Paste" Foreground="Black"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
